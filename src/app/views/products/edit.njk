{% extends "layout.njk" %}
{% block content %}
  <section class="container form">
    <form method="POST" action="/members?_method=PUT">
      <div class="header">
        <h3>Editar Produto {{productID}}</h3>
      </div>

      <div class="fields">
        {%include 'products/fields.njk' %}
        <input type="hidden" name="id" value="{{product.id}}">
      </div>
      <button type="submit" class="button edit">Atualizar</button>

    </form>
    <form action="/products?_method=DELETE" method="post" id="form-delete">
        <input type="hidden" name="id" value="{{product.id}}">
        <button class="button delete" type="submit">Deletar</button>
      </form>
  </section>

      <script>
      const formDelete = document.querySelector("#form-delete")
      formDelete.addEventListener("submit", function(event){  
        //pegando o evento do submit
        const confirmation = confirm("Tem certeza que deseja deletar ?")
        if(!confirmation){
            event.preventDefault()//Cancelando o padrão que é o evento deletar
        }
      })
    </script>
{% endblock content %}