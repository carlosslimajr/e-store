{% extends "layout.njk" %}
{% block content %}
  <section class="password container form">
    <form method="POST" action="/users/forgot-password">
      <!-- Agora permite enviar arquivos-->
      <div class="header">
        <h3>Esqueceu a senha?</h3>
      </div>

      <div class="fields">
        <div class="item">
          <div>Email</div>
          <div class="input">
            <input type="email" name="email" placeholder="Digite o email" value="{{user.email}}" onblur="Validate.apply(this, 'isEmail')">
          </div>
        </div>
      </div>
      <button type="submit" class="button">Recuperar Senha</button>

    </form>
  </section>
{% endblock content %}